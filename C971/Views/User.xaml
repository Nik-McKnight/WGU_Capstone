<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.Views.User"
             xmlns:models="clr-namespace:C971.Models"
             Title="{Binding Username}"
             >
    <ContentPage.BindingContext>
        <models:User />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <HorizontalStackLayout>
        <Label Text="Username" FontSize="14"/>
        <Editor x:Name="UsernameEditor"
            Placeholder="Enter Username"
            Text="{Binding Username}"
            HeightRequest="50" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Password" FontSize="14"/>
        <Editor x:Name="PasswordEditor"
            Placeholder="Enter Password"
            HeightRequest="50" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Confirm Password" FontSize="14"/>
        <Editor x:Name="ConfirmEditor"
            Placeholder="Confirm Password"
            HeightRequest="50" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Email" FontSize="14"/>
        <Editor x:Name="EmailEditor"
            Placeholder="Enter Email"
            Text="{Binding Email}"
            HeightRequest="50" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Phone Number" FontSize="14"/>
        <Editor x:Name="PhoneEditor"
            Placeholder="Enter Phone"
            Text="{Binding Phone}"
            HeightRequest="50" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="First Name" FontSize="14"/>
        <Editor x:Name="FirstEditor"
            Placeholder="Enter First Name"
            Text="{Binding FirstName}"
            HeightRequest="50" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Last Name" FontSize="14"/>
        <Editor x:Name="LastEditor"
            Placeholder="Enter Last Name"
            Text="{Binding LastName}"
            HeightRequest="50" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Is Admin: " FontSize="14"/>
            <Label x:Name="Admin"
            Text="{Binding IsAdmin}"
            HeightRequest="50" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Is Instructor: " FontSize="14"/>
            <Label x:Name="Instructor"
            Text="{Binding IsInstructor}"
            HeightRequest="50" />
        </HorizontalStackLayout>
        <Button Text="Submit" Clicked="Submit_Clicked" />
        <Button Text="Delete" Clicked="Delete_Clicked" />
    </VerticalStackLayout>
</ContentPage>