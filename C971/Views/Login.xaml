<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.Views.Login"
             Title="Login"             
             xmlns:models="clr-namespace:C971.Models"
             >
    <ContentPage.BindingContext>
        <models:User />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
            <Editor x:Name="UsernameEditor"
            Placeholder="Enter Username"
            HeightRequest="100" />

            <Editor x:Name="PasswordEditor"
            Placeholder="Enter Password"
            HeightRequest="100" />
        <Button Text="Log In" Clicked="Login_Clicked" />
        <Button Text="Register" Clicked="Register_Clicked" />

    </VerticalStackLayout>
</ContentPage>